<h1>Searching results for -- <%= @search_term %></h1>

<table border="1">
	<tr>
		<th>Image</th>
		<th>title</th>
		<th>social_rank</th>
	</tr>
	<% @Recipes.each do |recipe| %>
	 <tr>
		<td><=% link_to image_tag(recipe["image_url"],height:'100',width:'100'), recipe["f2f_url"] %></td>
		<td><=% link_to recipe["title"], recipe["f2f_url"] %></td>
		<td><=% recipe["social_rank"] %></td>
	 </tr>
	<% end %>
</table>

		
		
